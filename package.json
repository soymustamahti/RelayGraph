{
  "name": "relay-graph",
  "version": "0.0.1",
  "description": "A TypeScript library built with Bun",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "bun test",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format .",
    "typecheck": "tsc --noEmit",
    "prepare": "lefthook install",
    "prepublishOnly": "bun run build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "start:api": "bun run src/api/server.ts"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@changesets/cli": "^2.27.1",
    "@types/bun": "latest",
    "@types/pg": "^8.16.0",
    "lefthook": "^1.6.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.5.3",
    "@hono/zod-openapi": "^1.2.0",
    "@instructor-ai/instructor": "^1.7.0",
    "dotenv": "^17.2.3",
    "hono": "^4.11.5",
    "neo4j-driver": "^6.0.1",
    "openai": "^6.16.0",
    "pg": "^8.17.2",
    "zod": "^4.3.5"
  }
}
